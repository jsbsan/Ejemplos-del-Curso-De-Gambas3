  TextBox1.text = ModuleParsear.palabra1
  TextBox2.text = ModuleParsear.palabra2
  TextBox3.text = ModuleParsear.palabra3

  'Para que los textbox no sean editables
  TextBox1.ReadOnly = True
  TextBox2.ReadOnly = True
  TextBox3.ReadOnly = True

  Try TextAreaInterface.text = File.Load("/etc/dhcpcd.conf")

End

